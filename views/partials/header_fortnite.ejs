</head>

<body>
    <section class="video-background">
        <img src="/assets/Images/bg2.png" alt="background">
    </section>
    <header>
        <nav class="topnav">
            <article class="logoutbtn">
                <form action="/logout" method="POST">
                    <button type="submit">Uitloggen</button>
                </form>
            </article>
            <article id="myLinks">
                <a href="/homepage_fortnite">Home</a>
                <a href="/characters">Personages</a>
                <a href="/favorite_characters">Favorieten</a>
                <a href="/blacklisted_characters">Blacklisted</a>
                <a href="/user-profile" class="nav-link profile-link">
                    <img src="" alt="Profiel Foto" class="profile-icon"/>
                    <span><%= user.username %></span>
                </a>
            </article>
            <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                <i class="fa fa-bars"></i>
            </a>
        </nav>
    </header>
    <script>
        function myFunction() {
            var x = document.getElementById("myLinks");
            if (x.style.display === "block") {
                x.style.display = "none";
            } else {
                x.style.display = "block";
            }
        }
    </script>

